{
  "compilerOptions": {
    "composite": true,
    "target": "es2016",
    "module": "CommonJS",
    "rootDir": "./src",
    "moduleResolution": "node10",
    "allowJs": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", "eslint.config.mjs"]
}
